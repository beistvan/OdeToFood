@model OdeToFood.ViewModels.HomePageViewModel

@{ 
    ViewBag.Title = "Home";    
}
<h1>Welcome!</h1>
<table>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                @Html.ActionLink(@restaurant.Id.ToString(), "Details", new { id = restaurant.Id })
            </td>
            <td>@restaurant.Name</td>
        </tr>
    }
</table>

<!--<a href="/home/create">Create</a>-->
<a asp-controller="Home" asp-action="Create">Create</a>

@section footer{ 
    <div>@Model.CurrentGreeting</div>
}  